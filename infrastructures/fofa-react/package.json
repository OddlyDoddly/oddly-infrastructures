{
  "name": "fofa-react-infrastructure",
  "version": "1.0.0",
  "description": "Front-end Opinionated Feature-first Architecture (FOFA) React Infrastructure",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
